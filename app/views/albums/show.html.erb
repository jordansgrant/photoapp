<div class="row justify-content-center">
  <div class="col-md-6 mb-2 mt-2" >
	<h1 style="text-align: center"><%= @album.name %> Album</h1>
  </div>
</div>
<div class="row justify-content-center mb-3">
  <div class="col-md-6">
	<h4><%="#{@album.description}" unless @album.description.empty? %></h4>
  </div>
</div>
</div>
<div class="row mb-4">
  <div class="col-12">
	<% @album.photos.each_with_index do |photo, index| %>
	  <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2" style="text-align: center; float:left">
		<p class="thumb-name"> <%= photo.name %> </p>
		<div class="thumb-box">
		  <%= image_tag photo.photo.url(:thumb), class: "thumb", id: "thumb_#{index}"  unless photo.photo.nil? %>
		</div>
	  </div>
	<% end %>
  </div>
</div>
<div class="modal" id="modal" role="dialog">
  <div class="modal-dialog" style="width: 1500px; max-width: 100%">
	<div class="modal-content">
	  <div class="modal-header">
		<button type="button" class="close" data-dismiss="modal">&times;</button>
	  </div>
	  <div class="modal-body">
		<div id="carousel" class="carousel slide">
		  <div class="carousel-inner">
			<% @album.photos.each_with_index do |photo, index| %>
			  <div class="carousel-item <%= (index == 0) ? "active" : "" %>" title="<%= photo.name %>" >
				<%= image_tag photo.photo.url, class: "d-block", id: "#{index}" unless photo.photo.nil? %>
                <div class="carousel-caption d-none d-md-block">
                  <h3><%= photo.name %></h3>
                </div>
              </div>
			<% end %>
		  </div>
		  <a class="carousel-control-prev" role="button" id="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="sr-only">Previous</span>
		  </a>
		  <a class="carousel-control-next" role="button" id="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="sr-only">Next</span>
		  </a>
		</div>
	  </div>
	</div>
  </div>
</div>



